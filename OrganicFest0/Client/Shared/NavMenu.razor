@inject Blazored.LocalStorage.ILocalStorageService localStore
@using OrganicFest.Shared;

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand">VagtPlanlægning</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @if (bruger == null){ 
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Login">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Login
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="OpretFrivillig">
                <span class="oi oi-plus" aria-hidden="true"></span> Opret Frivillig
            </NavLink>
        </div>
        }
        @if (bruger != null)
            {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="Frivillig">
                <span class="oi oi-plus" aria-hidden="true"></span> Frivillig
            </NavLink>
        </div>
            }
        @if (bruger != null && bruger.IsCoordinator)
            {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="OpretVagt">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Opret Vagt
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="SeFrivillige">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Se Frivillige
            </NavLink>
        </div>
            }
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private Bruger? bruger;

    protected override async Task OnInitializedAsync()
    {
        bruger = await localStore.GetItemAsync<Bruger>("loggedInUser");
     
    }
}
