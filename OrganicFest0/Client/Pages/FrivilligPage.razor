@page "/Frivillig"
@using Bambus.Shared
@inject HttpClient Http;

<div class="container-fluid">
    <div class="row">

        <!-- Left Box -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4>Vagter</h4>

                    @if (vagtList == null)
                    {
                        <p>Loading...</p>
                    }
                    else if (vagtList.Count == 0)
                    {
                        <p>Ingen vagter fundet.</p>
                    }
                    else
                    {
                        @foreach (var vagt in vagtList)
                        {
                            <div class="mb-3">
                                <strong>VID:</strong> @vagt.VID.<br />
                                <strong>Job Navn:</strong> @vagt.Jobnavn<br />
                                <strong>Beskrivelse:</strong> @vagt.Description<br />
                                <button class="btn btn-sm btn-success" @onclick="() => AddFriviligToRightBox(vagt)">Add</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteFrivilig(vagt)">Delete</button>
                            </div>
                            <hr />
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Right Box -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4>Mine vagter</h4>
                    <!-- Display volunteers added to the right box -->
                    <ul>
                        @foreach (var vagt in MineVagter)
                        {
                            <div class="mb-3">
                                <strong>VID:</strong> @vagt.VID<br />
                                <strong>Job Navn:</strong> @vagt.Jobnavn<br />
                                <strong>Beskrivelse:</strong> @vagt.Description<br />
                                <button class="btn btn-sm btn-success" @onclick="() =>FjernFrivilligFromRight(vagt)">Fjern</button>
                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteFrivilig(vagt)">Delete</button>
                            </div>
                            <hr />
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private List<Vagt> vagtList = new List<Vagt>();
    private List<Vagt> MineVagter = new List<Vagt>();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            vagtList = await Http.GetFromJsonAsync<List<Vagt>>("api/Vagt");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error: {ex.Message}");
        }
    }

    // Metode til at håndtere sletning af en frivillig
    private void DeleteFrivilig(Vagt vagt)
    {
        // Fjern den valgte frivillig fra listen
        vagtList.Remove(vagt);

        MineVagter.Remove(vagt);
    }

    // Metode til at håndtere tilføjelse af en frivillig til højre boks
    private void AddFriviligToRightBox(Vagt vagt)
    {
        // Tilføj den valgte frivillig til højre boks
        MineVagter.Add(vagt);

        vagtList.Remove(vagt);
    }
    // Metode til at håndtere tilføjelse af en frivillig til højre boks
    private void FjernFrivilligFromRight(Vagt vagt)
    {
        // Tilføj den valgte frivillig til højre boks
        vagtList.Add(vagt);

        MineVagter.Remove(vagt);
    }
}
